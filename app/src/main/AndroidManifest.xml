<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.mobilemakers.chooseyourownadventure_rredition" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AlleyActivity"
            android:label="@string/title_activity_alley" >
        </activity>
        <activity
            android:name=".RoomActivity"
            android:label="@string/title_activity_room" >
        </activity>
        <activity
            android:name=".WinningActivity"
            android:label="@string/title_activity_winning" >
        </activity>
        <activity
            android:name=".LosingActivity"
            android:label="@string/title_activity_losing" >
        </activity>
    </application>

</manifest>
